<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CMID" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Widget.ActionBar</item>
        <item name="android:actionMenuTextColor">@android:color/holo_blue_light</item>
        <item name="android:actionMenuTextAppearance">@style/ActionButton</item>
    </style>

    <style name="Theme.CMID.ActionBar"/>

    <style name="Theme.CMID.ActionBar.Overlay">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="Widget.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_bg</item>
        <item name="android:displayOptions">disableHome|showCustom</item>
        <item name="android:customNavigationLayout">@layout/action_bar_nav</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="RootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">50dp</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="SetupWizardPageContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/card</item>
    </style>

    <style name="SetupWizardPageTitle">
        <item name="android:id">@android:id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/holo_blue_dark</item>
    </style>

    <style name="SetupWizardPageSummary">
        <item name="android:id">@android:id/summary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SetupWizardFormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="ActionButton">
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_gravity">top|right</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">italic|bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="ActionTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
        <item name="android:layout_marginTop">@dimen/actionbar_title_top_margin</item>
    </style>
</resources>
