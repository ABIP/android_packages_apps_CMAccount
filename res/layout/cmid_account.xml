<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             style="@style/SetupWizardCard">
    <LinearLayout android:orientation="vertical"
                  style="@style/SetupWizardPageContent">

        <TextView style="@style/SetupWizardPageTitle"
                  android:text="@string/cmid_add_title"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView style="@style/SetupWizardModDivider"/>

                <TextView style="@style/SetupWizardPageSummary"
                          android:text="@string/cmid_add_create_label"/>

                <Button android:id="@+id/learn_more_button"
                        style="@style/SetupWizardPageLink"
                        android:text="@string/cmid_learn_more"/>

                <View android:id="@+id/divider"
                      android:background="?android:attr/dividerHorizontal"
                      android:layout_marginTop="10dp"
                      android:layout_marginBottom="8dp"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:layout_height="1dp"
                      android:layout_width="match_parent" />

                <Button android:id="@+id/existing_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/existing"
                        style="@style/ActionButton"/>

                <Button android:id="@+id/new_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="@string/new_account"
                        style="@style/ActionButton"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>